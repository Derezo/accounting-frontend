{
  "name": "accounting-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Modern React TypeScript frontend for accounting API with comprehensive business management tools",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run --testNamePattern=\"^(?!.*integration).*\"",
    "test:integration": "vitest run --testNamePattern=\"integration\"",
    "test:financial": "vitest run --testNamePattern=\"financial|calculation|tax|invoice|payment\"",
    "test:auth": "vitest run --testNamePattern=\"auth|login|permission|role\"",
    "test:forms": "vitest run src/components/forms",
    "test:services": "vitest run src/services",
    "test:hooks": "vitest run src/hooks",
    "test:stores": "vitest run src/stores",
    "test:watch": "vitest --watch",
    "test:watch:coverage": "vitest --watch --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=junit",
    "test:smoke": "vitest run --testNamePattern=\"smoke\"",
    "test:e2e": "vitest run --testNamePattern=\"e2e\"",
    "test:performance": "vitest run --testNamePattern=\"performance\"",
    "test:validation": "npm run test:build && npm run test:imports && npm run test:dependencies && npm run test:typescript",
    "test:build": "vitest run src/__tests__/build-validation.test.ts",
    "test:imports": "vitest run src/__tests__/import-validation.test.ts",
    "test:dependencies": "vitest run src/__tests__/dependency-validation.test.ts",
    "test:typescript": "vitest run src/__tests__/typescript-validation.test.ts",
    "test:routes": "vitest run src/__tests__/route-validation.test.tsx",
    "test:api": "vitest run src/__tests__/api-service-validation.test.ts",
    "test:critical": "vitest run src/__tests__/critical-imports.test.ts",
    "test:all-validation": "npm run test:validation && npm run test:routes && npm run test:api && npm run test:critical && npm run test:smoke",
    "validate:pre-commit": "npm run typecheck && npm run lint && npm run test:critical",
    "validate:pre-push": "npm run test:all-validation",
    "validate:ci": "npm run test:all-validation && npm run test:coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-pdf/renderer": "^4.2.0",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "axios": "^1.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.2",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-day-picker": "^9.11.0",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.9.3",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "whatwg-fetch": "^3.6.20"
  }
}
